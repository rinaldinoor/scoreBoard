<html>
  <head>   
    <title> scoreTable </title>    
    <meta http-equiv="Content-Language" content="en-EN">
		<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <script src="{$basePath}/js/lib/jquery.js"></script>
    <script src="{$basePath}/js/lib/scrollingcarousel.2.0.min.js"></script>
    <link rel="stylesheet" href="{$basePath}/css/scoreTable/style.css">    
    
    <script>
      var i = 0;
      var l = 0;
      $(document).ready(function() {  
            $('#slider').scrollingCarousel( {
              scrollerAlignment : 'horizontal',
              autoScroll: true,
              autoScrollSpeed: 20000
             });
      
            
            l = $('#tables .wholeEventTable').length;
            $("#tables .wholeEventTable:gt(3)").hide();


       });

       function showNext(){
        console.log(l);
        if(i > l)
                i = 0;
        $('#tables .wholeEventTable:eq('+i+')').fadeOut();
        $('#tables .wholeEventTable:eq('+((i+4)%l)+')').fadeIn();
        i++;
       }

        setInterval(showNext, 5000);
    </script>

  </head>

  <body>
		<div id="slider">
      <ul>
      {if $matches->count() !== 0}
              {foreach $matches as $match}
                <li> <strong> {$names[$match->team1ID]->name} </strong>
                {$match->team1goals}:{$match->team2goals}
                <strong>{$names[$match->team2ID]->name}</strong> </li>
              {/foreach}
              {if $matches->count() < 3}
              <li> <div style="width: 300px;"></div></li>
              {/if}
        {else}

        <li> No matches are being played at the moment.</li> 
        <li> Sorry for anyinconvenience. </li>
        {/if}

      </ul>
    </div>
  
    <div id="tables">
	<!--new table-->
          {foreach $groups as $group}
        {var $teams = $model->getResults()->where('groupID', $group->id)->order('points DESC, goal_diff DESC');}
        {if $teams->count() !== 0 }
	<div class="wholeEventTable">
            <div class="eventDiv"><span class="groupName">{$group->name}</span></div>
                <div class="matches">
                        <table class="resultTable">
                                        <tr>
                                                <th>Pos.</th>
                                                <th></th>
                                                <th>P</th>
                                                <th>S</th>
                                                <th>W</th>
                                                <th>D</th>
                                                <th>L</th>
                                                <th>P</th>
                                        </tr>
                        {foreach $teams as $team}
                        <tr>
                                <td> {$iterator->getCounter()}. </td>
                                <td class='name'> {$names[$team->id]->name} </td>
                                <td> {$team->matches_played} </td>
                                <td> {$team->goal_diff} </td>
                                <td> {$team->wins} </td>
                                <td> {$team->draws} </td>
                                <td> {$team->loses} </td>
                                <td class="points"> {$team->points} </td>
                        </tr>
                        {/foreach}
                        </table>	
                    <span class="eventName">{$events[$group->eventID]->name}</span>		
                </div>
	
        </div>
                {/if}
          {/foreach}
    </div>
  </body>
</html> 
